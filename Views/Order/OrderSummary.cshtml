@model project.Models.Order

@{
    ViewData["Title"] = "Order Summary";
}

<h2>@ViewData["Title"]]</h2>

@if (Model?.Items.Any() ?? false)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@(item.Quantity * item.Product.Price).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <h3>Total: @Model.Items.Sum(i => i.Quantity * i.Product.Price).ToString("C")</h3>
        @using (Html.BeginForm("ClearCart", "Order", FormMethod.Post))
        {
            <input type="submit" value="Clear Cart" class="btn btn-warning" />
        }
        <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
    </div>
}
else
{
    <p>Your order is empty.</p>
}
